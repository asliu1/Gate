<Window x:Class="Editor.NewPlaceableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Placeable" Height="346" Width="570">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Placeable Name:" Grid.ColumnSpan="2"/>
        <TextBox Grid.Column="0" Grid.Row="1" Margin="5,1,5,1" Grid.ColumnSpan="2"/>
        <TextBlock Text="Components:"  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Button Content="-" Grid.Column="0" Grid.Row="3" Width="20" Padding="5,1,5,1"/>
        <ComboBox Grid.Column="1" Grid.Row="3"/>
        <Button Content="+" Grid.Column="2" Grid.Row="3" Width="20" Padding="5,1,5,1"/>
        <Button Content="Save"  Grid.ColumnSpan="2" Grid.Column="1" Width="75" Height="20" Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5px"/>
    </Grid>
</Window>
